<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- ============================================
         LAYER 2: SEMANTIC - Dark Theme Overrides
         Redefine semantic colors using dark primitives
         ============================================ -->

    <!-- Context-Specific Backgrounds -->
    <color name="backgroundColor">@color/md_dark_bg</color>
    <color name="lightBackground">@color/md_dark_bg</color>
    <color name="darkBackground">@color/md_dark_surface_dim</color>
    <color name="surfaceColor">@color/md_dark_surface</color>
    <color name="surfaceVariant">@color/md_dark_surface_dim</color>

    <!-- Panels -->
    <color name="panelBackground">@color/md_sexy_dark_green</color>
    <color name="headerBackground">@color/md_sexy_dark_green</color>
    <color name="innerPanelBackground">@color/md_dark_surface</color>
    <color name="dividerColour">@color/md_grey_400</color>

    <!-- Dialogs -->
    <color name="dialogSurface">@color/md_dark_surface_dim</color>

    <!-- Tables -->
    <color name="tableBackground">@color/md_dark_surface</color>
    <color name="tableBackgroundAlt">@color/md_dark_surface_dim</color>
    <color name="tableHighlight">@color/md_amber_300</color>
    <color name="tableHighlightText">@color/md_black</color>

    <!-- UI Elements -->
    <color name="grid">@color/md_dark_grid</color>
    <color name="station">@color/md_red</color>
    <color name="activeStationHighlight">@color/md_amber_300</color>
    <color name="legend">@color/md_grey_200</color>
    <color name="buttonHighlight">@color/md_grey_300</color>
    <color name="error">@color/md_red</color>

    <!-- Text Colors -->
    <color name="bodyTextColor">@color/md_dark_body_text</color>
    <color name="logTextColor">@color/md_dark_log_text</color>
    <color name="preferenceTextColor">@color/md_white</color>
    <color name="preferenceSecondaryTextColor">@color/md_dark_body_text</color>

</resources>
