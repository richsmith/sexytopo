<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/panelBackground</item>
        <item name="background">@color/lightBackground</item>

        <!-- SexyTopo branded colors -->
        <item name="colorPrimary">@color/sexyTopoGreen</item>
        <item name="colorPrimaryDark">@color/sexyTopoDarkGreen</item>
        <item name="colorAccent">@color/sexyTopoGreen</item>
        <item name="colorSecondary">@color/sexyTopoGreen</item>

        <!-- Surface colors for menus and popups in dark mode -->
        <item name="colorSurface">@color/dialogSurface</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Material dialog styling -->
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerSize">16dp</item>
    </style>

</resources>
