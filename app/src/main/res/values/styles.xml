<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/panelBackground</item>
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <attr name="grid" format="reference" />

    <style name="HeaderRow">
        <item name="android:background">@color/sexyTopoGreen</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HeaderText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HeaderStation" parent="HeaderText">
        <item name="android:gravity">center</item>
    </style>
    <style name="HeaderNum" parent="HeaderText">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    <style name="HeaderComment" parent="HeaderText">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">8dp</item>
    </style>
    <style name="BodyRow">
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BodyText">
    <item name="android:textColor">@color/bodyTextColor</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BodyStation" parent="BodyText">
        <item name="android:gravity">center</item>
    </style>
    <style name="BodyNum" parent="BodyText">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    <style name="BodyComment" parent="BodyText">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">8dp</item>
    </style>


    <style name="ToolbarImageButton">
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ContextMenuButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

</resources>
