<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- ============================================
         LAYER 1: PRIMITIVES - Raw RGB Values Only
         These are defined once and never overridden
         ============================================ -->

    <!-- Basic Colors -->
    <color name="md_white">#FFFFFF</color>
    <color name="md_black">#000000</color>
    <color name="md_pink">#FFC0CB</color>
    <color name="md_red">#FF0000</color>

    <!-- Brand Colors -->
    <color name="md_sexy_green">#7FAF7F</color>
    <color name="md_sexy_dark_green">#3A5738</color>
    <color name="md_sexy_purple">#AF7FAF</color>
    <color name="md_sexy_dark_purple">#383A57</color>
    <color name="md_navy">#000080</color>

    <!-- Grey Scale -->
    <color name="md_grey_100">#DDDDDD</color>
    <color name="md_grey_200">#D3D3D3</color>
    <color name="md_grey_300">#A9A9A9</color>
    <color name="md_grey_400">#7F7F7F</color>
    <color name="md_grey_500">#333333</color>

    <!-- Light Theme Specific Primitives -->
    <color name="md_light_surface">#F5F5F5</color>
    <color name="md_light_surface_dim">#0D0D0D</color>
    <color name="md_yellow">#FFD700</color>
    <color name="md_amber_500">#FFC107</color>
    <color name="md_amber_300">#FFD54F</color>

    <!-- Dark Theme Specific Primitives -->
    <color name="md_dark_bg">#121212</color>
    <color name="md_dark_surface">#2A2A2A</color>
    <color name="md_dark_surface_dim">#1F1F1F</color>
    <color name="md_dark_grid">#505050</color>
    <color name="md_dark_body_text">#BFBFBF</color>
    <color name="md_dark_log_text">#E0E0E0</color>


    <!-- ============================================
         LAYER 2: SEMANTIC - Context-Specific Names
         Light theme defaults - overridden in values-night/
         ============================================ -->

    <!-- Basic Semantic Aliases -->
    <color name="white">@color/md_white</color>
    <color name="black">@color/md_black</color>
    <color name="pink">@color/md_pink</color>
    <color name="red">@color/md_red</color>

    <!-- Brand Colors -->
    <color name="sexyTopoGreen">@color/md_sexy_green</color>
    <color name="sexyTopoDarkGreen">@color/md_sexy_dark_green</color>
    <color name="sexyTopoPurple">@color/md_sexy_purple</color>
    <color name="sexyTopoDarkPurple">@color/md_sexy_dark_purple</color>
    <color name="navy">@color/md_navy</color>

    <!-- Grey Aliases -->
    <color name="lowKeyGrey">@color/md_grey_100</color>
    <color name="lightGrey">@color/md_grey_200</color>
    <color name="darkGrey">@color/md_grey_300</color>

    <!-- Context-Specific Backgrounds -->
    <color name="backgroundColor">@color/md_white</color>
    <color name="lightBackground">@color/md_white</color>
    <color name="darkBackground">@color/md_light_surface_dim</color>
    <color name="surfaceColor">@color/md_grey_100</color>
    <color name="surfaceVariant">@color/md_light_surface</color>

    <!-- Panels -->
    <color name="panelBackground">@color/md_sexy_green</color>
    <color name="headerBackground">@color/md_sexy_green</color>
    <color name="innerPanelBackground">@color/md_grey_100</color>
    <color name="dividerColour">@color/md_grey_300</color>

    <!-- Dialogs -->
    <color name="dialogSurface">@color/md_white</color>

    <!-- Tables -->
    <color name="tableBackground">@color/md_white</color>
    <color name="tableBackgroundAlt">@color/md_light_surface</color>
    <color name="tableHighlight">@color/md_amber_500</color>
    <color name="tableHighlightText">@color/md_black</color>

    <!-- UI Elements -->
    <color name="grid">@color/md_grey_200</color>
    <color name="station">@color/md_red</color>
    <color name="activeStationHighlight">@color/md_amber_500</color>
    <color name="legend">@color/md_black</color>
    <color name="buttonHighlight">@color/md_white</color>
    <color name="error">@color/md_red</color>

    <!-- Text Colors -->
    <color name="bodyTextColor">@color/md_grey_400</color>
    <color name="logTextColor">@color/md_grey_500</color>
    <color name="preferenceTextColor">@color/md_black</color>
    <color name="preferenceSecondaryTextColor">@color/md_grey_400</color>

</resources>
