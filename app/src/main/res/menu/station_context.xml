            <item
                android:id="@+id/action_rename_station"
                android:title="@string/menu_rename_station"/>

            <item
                android:id="@+id/action_new_cross_section"
                android:title="@string/menu_new_cross_section"
                android:visible="false"/>

            <item
                android:id="@+id/action_comment"
                android:title="@string/menu_comment"/>

            <item
                android:id="@+id/action_delete_station"
                android:title="@string/menu_delete_station"/>
        </menu>
    </item>

    <!-- Leg actions sub-menu -->
    <item
        android:id="@+id/menu_leg"
