        <menu>
            <item
                android:id="@+id/action_edit_leg"
                android:title="@string/menu_edit_leg"/>

            <item
                android:id="@+id/action_reverse"
                android:title="@string/menu_reverse"/>

            <item
                android:id="@+id/action_upgrade_splay"
                android:title="@string/menu_upgrade_splay"
                android:visible="false"/>

            <item
                android:id="@+id/action_downgrade_leg"
                android:title="@string/menu_downgrade_leg"
                android:visible="false"/>

            <item
                android:id="@+id/action_delete_leg"
                android:title="@string/menu_delete_leg"/>
        </menu>
    </item>

    <!-- Elevation sub-menu -->
    <item
        android:id="@+id/menu_elevation"
        android:title="@string/menu_elevation"
        android:visible="false">
        <menu>
            <group
                android:id="@+id/group_direction"
                android:checkableBehavior="single">
                <item
                    android:id="@+id/action_direction_left"
                    android:title="@string/menu_draw_left"
                    android:checkable="true"/>

                <item
                    android:id="@+id/action_direction_right"
                    android:title="@string/menu_draw_right"
                    android:checkable="true"/>
            </group>
        </menu>
